<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/city"
    tools:context=".Cadastro"
    android:theme="@style/ItemTextAppearance">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="347dp"
        android:layout_height="591dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="#B9000000"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="61dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="161dp"
            android:layout_height="130dp"
            android:layout_marginLeft="90dp"
            android:onClick="fodasseOUX"
            android:layout_marginTop="20dp"
            android:minWidth="30in"

            android:src="@mipmap/icone" />

        <EditText
            android:id="@+id/nomeCompleto"
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittextstyle"
            android:hint="@string/cadastro_nome_completo"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColorHint="#03A9F4"
            android:textColor="#03A9F4"
            android:theme="@style/TextAppearance"/>

        <EditText
            android:id="@+id/CPF"
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittextstyle"
            android:hint="@string/CPF"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"

            android:selectAllOnFocus="true"
            android:theme="@style/ItemTextAppearance"
            android:textAlignment="center"
            android:textColorHint="#03A9F4"
            android:textColor="#03A9F4"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <EditText
            android:id="@+id/dataNascimento"
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittextstyle"
            android:hint="@string/cadastro_data_nascimento"
            android:inputType="date"
            android:textColor="#03A9F4"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColorHint="#03A9F4"
            app:layout_constraintTop_toBottomOf="@+id/username"
            />


        <Spinner
            android:id="@+id/sexo"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/edittextstyle"
            android:entries="@array/sexo"
            android:theme="@style/ItemTextAppearance"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/support_simple_spinner_dropdown_item"
            android:layout_marginLeft="30dp" />

        <Spinner
            android:id="@+id/estado"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:theme="@style/ItemTextAppearance"
            
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittextstyle"
            android:entries="@array/estado"
            android:textAlignment="center"
            tools:listitem="@layout/support_simple_spinner_dropdown_item" />


        <EditText
            android:id="@+id/password"
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:textColor="#03A9F4"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittextstyle"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColorHint="#03A9F4"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <Button
            android:id="@+id/cadastrado"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:background="#03A9F4"
            android:onClick="confi"
            android:text="confirmar"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/password" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>