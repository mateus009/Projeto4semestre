<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageButton
            android:id="@+id/fab"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="8dp"
            android:background="#03A9F4"
            android:scaleType="fitCenter"
            android:layout_marginBottom="112dp"
            android:onClick="PlacesHospital"
            android:src="@mipmap/hospital" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/Aviso"
        android:text=""
        android:textSize="19dp"
        android:textColor="#03A9F4"
        ></TextView>
    <ImageButton
        android:id="@+id/plc"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="170dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/btnhosp"
        android:src="@mipmap/police"
        android:onClick="PlacesPolice"
        android:text="Policia" />

    <ImageButton
        android:id="@+id/delegMul"
        android:layout_gravity="bottom|end"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/btnhosp"
        android:src="@mipmap/femalepol"
        android:layout_marginBottom="228dp"
        android:onClick="PlacesDelegMulher"
/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
